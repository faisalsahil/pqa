<%- model_class = Exam -%>
<div class="modal-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal for-overflow">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @exam.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:on) %>:</strong></dt>
  <dd><%= @exam.on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course) %>:</strong></dt>
  <dd><%= @exam.course %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @exam.category %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max_points) %>:</strong></dt>
  <dd><%= @exam.max_points %></dd>
  <dt><strong><%= model_class.human_attribute_name(:teacher_id) %>:</strong></dt>
  <dd><%= @exam.teacher_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_sample_uploaded) %>:</strong></dt>
  <dd><%= @exam.is_sample_uploaded %></dd>
</dl>

<%= content_tag(:div, ""  , :class => "form-actions" ) do %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              exams_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_exam_path(@exam), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              exam_path(@exam),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
