<h1>Tasks</h1>
<table>
  <th><%= link_to project.name, project_path(project) %></th>
  <% for task in @tasks %>
      <tr>

        <td><%= link_to task.name, task_path(task) %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_project_path(task) %></td>
        <td><%= link_to 'destroy',destroy_project_path(task)</td>
      </tr>
  <% end %>
</table>